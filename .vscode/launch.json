    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Test Current Source",
        "program": "${workspaceFolder}/node_modules/paperback-cli/bin/run",
        "args": ["test", "${fileBasenameNoExtension}"],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Test All Sources",
        "program": "${workspaceFolder}/node_modules/.bin/paperback.cmd",
        "args": ["test"],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Current File",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "--no-timeouts",
          "--trace-warnings",
          "--colors",
          "${file}",
          "--require",
          "ts-node/register"
        ],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Current File",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "--no-timeouts",
          "--trace-warnings",
          "--colors",
          "${file}",
          "--require",
          "ts-node/register"
        ],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }